<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dp"
        >

        <ImageView
            android:layout_centerHorizontal = "true"
            android:layout_width = "200dp"
            android:layout_height = "200dp"
            android:layout_margin = "9dp"
            android:adjustViewBounds = "true"
            android:background = "@drawable/circle"
            android:padding = "5dp"
            android:scaleType = "fitXY"
            android:src = "@drawable/logo_ute"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="monospace">

        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_toRightOf="@id/hinh1"
                android:id="@+id/text_lb1"/>
            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/hinh1"
                android:paddingRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_user"
                />
            <EditText
                android:id="@+id/textUser"
                android:textColorHint="#000"
                android:layout_below="@+id/text_lb1"
                android:layout_toRightOf="@id/hinh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tran Gia Phuoc"
                android:textColor="#000"
                >
            </EditText>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_toRightOf="@id/hinh2"
                android:id="@+id/text_lb2"/>
            <ImageView
                android:id="@+id/hinh2"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_lock"
                />
            <EditText
                android:id="@+id/textPassword"
                android:textColorHint="#000"
                android:layout_below="@+id/text_lb2"
                android:layout_toRightOf="@id/hinh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1811505310333"
                android:textColor="#000"
                >
            </EditText>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <Button
                android:textColor="#ffff"
                android:layout_marginTop="5dp"
                android:id="@+id/button_signin"
                android:background="@drawable/botron"
                android:text="Sign In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Button >

            <Button
                android:id="@+id/btgmail"
                android:textColor="#ffff"
                android:text="Gmail"
                android:background="@drawable/botron2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_signin"
                android:layout_marginTop="10dp">
            </Button>

            <Button
                android:id="@+id/fbbt"
                android:layout_alignParentRight="true"
                android:textColor="#ffff"
                android:text="FaceBook"
                android:background="@drawable/botron3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_signin"
                android:layout_marginTop="10dp"></Button>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forgot"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password"
            android:textSize="20sp"
            android:textColor="#EF4848"/>

        <TextView
            android:layout_below="@+id/forgot"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have account? Sign up now"
            android:textSize="20sp"
            android:textColor="#EDEDE5"/>


    </RelativeLayout>
</LinearLayout>